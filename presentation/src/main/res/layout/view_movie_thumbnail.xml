<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="240dp"
    android:layout_height="200dp"
    android:background="@android:drawable/btn_default">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/movieThumbnail"
        android:layout_width="210dp"
        android:layout_height="190dp"
        android:layout_margin="2dp"
        android:scaleType="fitCenter"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        tools:srcCompat="@tools:sample/avatars"
        tools:visibility="visible" />

    <TextView
        android:id="@+id/movieThumbnailTitle"
        android:layout_width="220dp"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:alpha="0.7"
        android:background="@android:color/background_dark"
        android:ellipsize="end"
        android:gravity="center"
        android:maxLines="2"
        android:textColor="@android:color/white"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/movieThumbnail"
        app:layout_constraintStart_toStartOf="@+id/movieThumbnail"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0"
        tools:text="Mission Impossible 6: Fallout" />

    <ProgressBar
        android:id="@+id/movieThumbnailProgress"
        style="?android:attr/progressBarStyle"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="@+id/movieThumbnail"
        app:layout_constraintEnd_toEndOf="@+id/movieThumbnail"
        app:layout_constraintStart_toStartOf="@+id/movieThumbnail"
        app:layout_constraintTop_toTopOf="@+id/movieThumbnail"
        tools:visibility="visible" />
</androidx.constraintlayout.widget.ConstraintLayout>
